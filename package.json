{
    "name": "decorator-next",
    "private": "true",
    "version": "0.0.1",
    "description": "",
    "scripts": {
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test": "bun run --filter '*' test",
        "lint": "bun run --filter '*' lint",
        "lint:client": "bun run --cwd packages/client lint",
        "lint:server": "bun run --cwd packages/server lint",
        "lint:icons": "bun run --cwd packages/icons lint",
        "lint:shared": "bun run --cwd packages/shared lint",
        "lint:next": "bun run --cwd packages/next-pages-router-example lint",
        "dev": "concurrently \"bun run --cwd packages/client dev\" \"bun run --cwd packages/server dev\"",
        "build": "bun run --cwd packages/icons build && bun run --cwd packages/client build && bun run --cwd packages/server build && bun run copy-assets",
        "copy-assets": "mkdir -p packages/server/public && copyfiles -u 3 packages/client/dist/assets/**/* packages/server/public/",
        "prepare": "husky",
        "benchmarking": "./benchmarking/run",
        "clean": "rm -rf node_modules packages/**/node_modules bun.lockb packages/**/bun.lockb",
        "playwright": "playwright test"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "@types/umami": "2.10.1",
        "clsx": "2.1.1",
        "zod": "4.3.5"
    },
    "dependencyComments": {
        "storybook": "Need to have matching storybook version across all storybook packages for it to work properly."
    },
    "devDependencies": {
        "@axe-core/playwright": "4.11.0",
        "@playwright/test": "1.57.0",
        "@storybook/addon-docs": "10.2.0",
        "@storybook/html": "10.2.0",
        "@storybook/html-vite": "10.2.0",
        "@typescript-eslint/eslint-plugin": "8.53.0",
        "@typescript-eslint/parser": "8.53.0",
        "concurrently": "9.2.1",
        "copyfiles": "2.4.1",
        "esbuild-minify-templates": "0.13.1",
        "eslint": "9.39.2",
        "husky": "9.1.7",
        "lint-staged": "16.2.7",
        "postcss-import-sync2": "1.2.0",
        "prettier": "3.8.0",
        "storybook": "10.2.0",
        "typescript": "5.9.3",
        "typescript-plugin-css-modules": "5.2.0",
        "vite": "7.3.1"
    },
    "trustedDependencies": [
        "husky"
    ],
    "lint-staged": {
        "*.{ts,tsx,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,html,yaml,md}": [
            "prettier --write"
        ]
    },
    "prettier": {}
}
