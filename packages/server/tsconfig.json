{
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "esnext",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "typeRoots": ["bun-types"],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "postcssOptions": {
                        "useConfig": true
                    }
                }
            }
        ]
    },
    "exclude": ["**/*.stories.ts"]
}
