{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "ESNext",
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "baseUrl": "./",
        "rootDir": "../",
        "types": ["bun-types"],
        "paths": {
            "lib/*": ["../*"]
        },
        "isolatedModules": true
    },
    "include": ["**/*", "../**/*"]
}
