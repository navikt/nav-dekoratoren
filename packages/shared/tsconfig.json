{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": false,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "esModuleInterop": true,
        "composite": true,
        "module": "esnext",
        "moduleResolution": "Bundler",
        "moduleDetection": "force",
        "types": ["vite/client", "node"],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "postcssOptions": {
                        "useConfig": true
                    }
                }
            }
        ]
    }
}
